class Solution {
    public int maxSubArray(int[] nums) {
        int i = 0;
        int sum = 0;
        int maxSum = Integer.MIN_VALUE;
        while (i < nums.length) {
            sum += nums[i]; // Keep adding to existing sum
            maxSum = Math.max(maxSum, sum);
            if (sum < 0) {
                sum = 0;    // For -ve aubarray sum, reset sum to 0
            }
            i++;
        }
        return maxSum;
    }
}
